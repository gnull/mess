                     , unix-time >= 0.3.7
                     , aeson >= 1.1
                     , bytestring >= 0.10
                     , binary >= 0.8
                     , optparse-applicative >= 0.13

executable mess-html
  hs-source-dirs:      src
  main-is:             Html.hs
  default-language:    Haskell2010
  other-modules:       Data.VkMess Text.Html.VkMess Text.Html.VkMess.Static
  build-depends:       base >= 4.7 && < 5
                     , text >= 1.2.2
                     , unix-time >= 0.3.7
                     , aeson >= 1.1
                     , bytestring >= 0.10
                     , binary >= 0.8
                     , optparse-applicative >= 0.13
                     , blaze-html >= 0.9
                     , blaze-markup >= 0.8
